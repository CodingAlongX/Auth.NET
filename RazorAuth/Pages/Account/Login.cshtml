@page
@model RazorAuth.Pages.Account.Login

@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-12  col-md-12 col-lg-4">
            <h1 class="mb-3">Login</h1>

            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <label class="form-label" asp-for="ViewModel.Email">Email Address</label>
                    <input type="text" asp-for="ViewModel.Email" class="form-control"/>
                    <span asp-validation-for="ViewModel.Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="ViewModel.Password">Password</label>
                    <input type="password" asp-for="ViewModel.Password" class="form-control"/>
                    <span asp-validation-for="ViewModel.Password" class="text-danger"></span>
                </div>
                <div class="mb-3 form-check">
                    <input type="checkbox" asp-for="ViewModel.RememberMe" class="form-check-input"/>
                    <label class="form-check-label" asp-for="ViewModel.RememberMe">Remember Me?</label>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>